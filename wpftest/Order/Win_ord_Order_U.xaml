<UserControl x:Class="WizMes_HanMin.Win_ord_Order_U"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizMes_HanMin"
             mc:Ignorable="d" Loaded="UserControl_Loaded"
             d:DesignHeight="620" d:DesignWidth="820">
    <Grid Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="88*" />
                <RowDefinition Height="532*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="{DynamicResource WizMes_HanMin}" Margin="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="160*" />
                    <ColumnDefinition Width="180*" />
                    <ColumnDefinition Width="180*" />
                    <ColumnDefinition Width="200*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65*" />
                        <ColumnDefinition Width="85*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblDateSrh" Grid.Column="0" Style="{DynamicResource LabelSearch}"
                           MouseLeftButtonDown="lblDateSrh_MouseLeftButtonDown">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="ChkDateSrh" Checked="ChkDateSrh_Checked" IsChecked="True"
                                          Unchecked="ChkDateSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Text=" 수주 일자" Style="{DynamicResource TextBlockInViewBoxSearch}" />    
                            </Viewbox>
                            
                        </StackPanel>
                    </Label>
                    <DatePicker x:Name="dtpSDate" Grid.Column="1" Style="{DynamicResource DatePickerSearch}" IsEnabled="True"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65*" />
                        <ColumnDefinition Width="85*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnToday" Grid.Column="0" Click="btnToday_Click">
                            <TextBlock Text="금일"/>
                        </Button>
                        <Button x:Name="btnThisMonth" Grid.Column="1" Click="btnThisMonth_Click">
                            <TextBlock Text="금월" />
                        </Button>
                    </Grid>
                    <DatePicker x:Name="dtpEDate" Grid.Column="1" Grid.Row="1" Style="{DynamicResource DatePickerSearch}" IsEnabled="True" 
                                SelectedDateChanged="dtpEDate_SelectedDateChanged"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="1">
                    <Button x:Name="btnMassEnrollment" Margin="1" Click="btnMassEnrollment_Click">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <TextBlock Text="수주 일괄 복사 등록" Style="{DynamicResource TextBlockInViewBoxSearch}"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*" />
                        <ColumnDefinition Width="90*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblCustomSrh" Grid.Column="0"
                           MouseLeftButtonUp="lblCustomSrh_MouseLeftButtonUp" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="chkCustomSrh" Checked="chkCustomSrh_Checked" 
                                          Unchecked="chkCustomSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Text="거래처" Style="{DynamicResource TextBlockInViewBoxSearch}" />    
                            </Viewbox>
                            
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtCustomSrh" Grid.Column="1" Padding="0" IsEnabled="False"  Style="{DynamicResource TextBoxSearch}"
                             Keyboard.KeyDown="txtCustomSrh_KeyDown"/>
                    <Button x:Name="btnPfCustomSrh" Grid.Column="2" IsEnabled="False"
                            Click="btnPfCustomSrh_Click" >
                        <Image Source="{DynamicResource btiPlusFind}"   />
                    </Button>
                </Grid>

                <Grid Grid.Column="2" Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*" />
                        <ColumnDefinition Width="90*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblModelIDSrh" Grid.Column="0"
                           MouseLeftButtonUp="lblModelIDSrh_MouseLeftButtonUp" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="chkBuyerModelIDSrh" Checked="chkBuyerModelIDSrh_Checked" 
                                          Unchecked="chkBuyerModelIDSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Text="모   델" Style="{DynamicResource TextBlockInViewBoxSearch}" />
                            </Viewbox>
                            
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtBuyerModelIDSrh" Grid.Column="1" Padding="0" IsEnabled="False" 
                             Style="{DynamicResource TextBoxSearch}"
                             Keyboard.KeyDown="txtBuyerModelIDSrh_KeyDown"/>
                    <Button x:Name="btnPfBuyerModelIDSrh" Grid.Column="2"
                            IsEnabled="False" Click="btnPfBuyerModelIDSrh_Click">
                        <Image Source="{DynamicResource btiPlusFind}"   />
                    </Button>
                </Grid>

                <Grid Grid.Column="2" Grid.Row="2" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*" />
                        <ColumnDefinition Width="90*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="LabelBuyerArticleNoSearch" Grid.Column="0"
                           MouseLeftButtonUp="LabelBuyerArticleNoSearch_MouseLeftButtonUp"  Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="CheckBoxBuyerArticleNoSearch" 
                                          VerticalAlignment="Center"
                                          Checked="CheckBoxBuyerArticleNoSearch_Checked" Unchecked="CheckBoxBuyerArticleNoSearch_Unchecked"></CheckBox>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Text="품   번"    Style="{DynamicResource TextBlockInViewBoxSearch}" />
                            </Viewbox>
                            
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="TextBoxBuyerArticleNoSearch" Grid.Column="1" IsEnabled="False"
                           Style="{DynamicResource TextBoxSearch}"
                             KeyDown="TextBoxBuyerArticleNoSearch_KeyDown" ></TextBox>
                    <Button x:Name="ButtonBuyerArticleNoSearch" Grid.Column="2" IsEnabled="False"
                            Click="ButtonBuyerArticleNoSearch_Click" >
                        <Image Source="{DynamicResource btiPlusFind}" ></Image>
                    </Button>
                </Grid>

                <Grid Grid.Column="2" Grid.Row="3" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*" />
                        <ColumnDefinition Width="90*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="LabelArticleSearch" Grid.Column="0" 
                           MouseLeftButtonUp="LabelArticleSearch_MouseLeftButtonUp" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="CheckBoxArticleSearch" 
                                          VerticalAlignment="Center"
                                          Checked="CheckBoxArticleSearch_Checked" Unchecked="CheckBoxArticleSearch_Unchecked" ></CheckBox>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Text="품   명" 
                                       Style="{DynamicResource TextBlockInViewBoxSearch}" />
                            </Viewbox>
                            
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="TextBoxArticleSearch" Grid.Column="1" IsEnabled="False"
                            Style="{DynamicResource TextBoxSearch}"
                             KeyDown="TextBoxArticleSearch_KeyDown" ></TextBox>
                    <Button x:Name="ButtonArticleSearch" Grid.Column="2" IsEnabled="False"
                            Click="ButtonArticleSearch_Click" >
                        <Image Source="{DynamicResource btiPlusFind}" ></Image>
                    </Button>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*" />
                        <ColumnDefinition Width="90*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblOrderIDSrh" Grid.Column="0"
                           MouseLeftButtonUp="lblOrderIDSrh_MouseLeftButtonUp" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="chkOrderIDSrh" Checked="chkOrderIDSrh_Checked" 
                                          Unchecked="chkOrderIDSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock x:Name="tbkOrderSrh" Text=" 관리번호" Style="{DynamicResource TextBlockInViewBoxSearch}" />
                            </Viewbox>
                            
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtOrderIDSrh" Grid.Column="1" Style="{DynamicResource TextBoxSearch}" IsEnabled="False" />
                </Grid>
                <Grid Grid.Row="1" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*" />
                        <ColumnDefinition Width="90*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblCloseClssSrh" Grid.Column="0" 
                           MouseLeftButtonUp="lblCloseClssSrh_MouseLeftButtonUp" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="chkCloseClssSrh" Checked="chkCloseClssSrh_Checked" 
                                          Unchecked="chkCloseClssSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Text=" 완료구분" Style="{DynamicResource TextBlockInViewBoxSearch}" />
                            </Viewbox>
                          
                        </StackPanel>
                    </Label>
                    <ComboBox x:Name="cboCloseClssSrh" Grid.Column="1" Style="{DynamicResource ComboBoxSearchString}" IsEnabled="False" />
                </Grid>
                <Grid Grid.Row="2" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*" />
                        <ColumnDefinition Width="90*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblWorkSrh" Grid.Column="0"
                           MouseLeftButtonUp="lblWorkSrh_MouseLeftButtonUp" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="chkWorkSrh" Checked="chkWorkSrh_Checked" 
                                          Unchecked="chkWorkSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Text=" 가공구분" Style="{DynamicResource TextBlockInViewBoxSearch}" />
                            </Viewbox>
                            
                        </StackPanel>
                    </Label>
                    <ComboBox x:Name="cboWorkSrh" Grid.Column="1" Style="{DynamicResource ComboBoxSearchString}" IsEnabled="False"/>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*" />
                        <ColumnDefinition Width="90*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblOrderClassSrh" Grid.Column="0"
                           MouseLeftButtonUp="lblOrderClassSrh_MouseLeftButtonUp" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="chkOrderClassSrh" Checked="chkOrderClassSrh_Checked" 
                                          Unchecked="chkOrderClassSrh_Unchecked" VerticalAlignment="Center"/>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Text=" 주문구분" Style="{DynamicResource TextBlockInViewBoxSearch}" />
                            </Viewbox>
                           
                        </StackPanel>
                    </Label>
                    <ComboBox x:Name="cboOrderClassSrh" Grid.Column="1" Style="{DynamicResource ComboBoxSearchString}" IsEnabled="False" />
                </Grid>

                <Grid Grid.Row="0" Grid.Column="4" Grid.RowSpan="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnAdd" Grid.Column="0" Click="btnAdd_Click" Margin="1" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiInsert}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblInsert},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnUpdate" Grid.Column="1" Click="btnUpdate_Click"  Margin="1">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiUpdate}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblUpdate},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnDelete" Grid.Column="2" Click="btnDelete_Click" Margin="1" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiDelete}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblDelete},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnClose" Grid.Column="3" Click="btnClose_Click" Margin="1" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnSearch" Grid.Column="0" Click="btnSearch_Click"  Margin="1" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnSave" Grid.Column="1" Visibility="Hidden" Click="btnSave_Click"  Margin="1">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiSave}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblSave},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnCancel" Grid.Column="2" Visibility="Hidden" Click="btnCancel_Click"  Margin="1">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiCancle}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblCancle},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnExcel" Grid.Column="3" Click="btnExcel_Click" Margin="1"  >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>

                <Grid Grid.Row="3" Grid.Column="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Label x:Name="lblOrderFlag"
                           MouseLeftButtonUp="LblOrderFlag_MouseLeftButtonUp" Style="{DynamicResource LabelSearch}">
                            <StackPanel Style="{DynamicResource StackPanelInLabel}">
                                <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                    <CheckBox x:Name="chkOrderFlag" Checked="ChkOrderFlag_Checked" 
                                          Unchecked="ChkOrderFlag_Unchecked" VerticalAlignment="Center"/>
                                </Viewbox>
                                <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                    <TextBlock Text="수주구분" Style="{DynamicResource TextBlockInViewBoxSearch}" />
                                </Viewbox>
                                
                            </StackPanel>
                        </Label>
                    </Grid>

                    <Grid Grid.Column="1">
                        <ComboBox x:Name="cboOrderFlag" Background="White"  Grid.Column="1" Style="{DynamicResource ComboBoxSearchString}" IsEnabled="False" />
                    </Grid>
                </Grid>

            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="22.5*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dgdMain" Grid.Row="0" Margin="1" IsReadOnly="True" Style="{DynamicResource DataGridSet1}"
                              SelectionChanged="dgdMain_SelectionChanged"
                              MouseLeftButtonDown="dgdMain_MouseDoubleClick"
                              SizeChanged="DataGrid_SizeChange" >
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="" Binding="{Binding Num}" />
                            <DataGridTextColumn Header="완료" Visibility="Hidden"/>
                            <DataGridTextColumn Header="관리번호" Binding="{Binding OrderID}" />
                            <DataGridTextColumn Header="Order No" Binding="{Binding OrderNO}" Visibility="Hidden" />
                            <DataGridTextColumn Header="거래처명" Binding="{Binding KCustom}" />
                            <DataGridTextColumn Header="품  번" Binding="{Binding BuyerArticleNo}" />
                            <DataGridTextColumn Header="품  명" Binding="{Binding Article}"/>
                            <DataGridTextColumn Header="총 주문량" Binding="{Binding OrderQty}" 
                                                CellStyle="{StaticResource NumericDataGridCell}"/>
                            <DataGridTextColumn Header="금  액" Binding="{Binding Amount_CV}" 
                                                CellStyle="{DynamicResource NumericDataGridCell}"/>
                            <DataGridTextColumn Header="VAT별도" Binding="{Binding Vat_IND_YN}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="내수여부" Binding="{Binding OrderFlag}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="납품장소" Binding="{Binding DvlyPlace}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="규격" Binding="{Binding OrderSpec}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="접수일자" Binding="{Binding AcptDate}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="납기일자" Binding="{Binding DvlyDate}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="가공구분" Binding="{Binding WorkID}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="P/ONo" Binding="{Binding PONO}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="비고사항" Binding="{Binding Remark}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="주문형태" Binding="{Binding OrderForm}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="주문구분" Binding="{Binding OrderClss}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="수불기준" Binding="{Binding WorkUnitClss}" Visibility="Hidden"/>
                            <DataGridTextColumn Header="품명종류" Binding="{Binding ArticleGrpID}" Visibility="Hidden"/>

                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Row="1" Margin="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" BorderThickness="1" BorderBrush="Black" VerticalContentAlignment="Center">
                            <TextBlock Text="합계" Margin="4"/>
                        </Label>
                        <TextBox x:Name="txtOrderCount" Grid.Column="1" Grid.Row="0" IsReadOnly="True"
                                 Style="{DynamicResource NumericAndReadOnlyNoBackTextBox}"/>
                        <TextBox x:Name="txtOrder" Grid.Column="1" Grid.Row="1" IsReadOnly="True" 
                                 Style="{DynamicResource NumericAndReadOnlyNoBackTextBox}"/>
                        <TextBox x:Name="txtOrderYds" Grid.Column="2" Grid.Row="0" IsReadOnly="True"
                                 Style="{DynamicResource NumericAndReadOnlyNoBackTextBox}"/>
                        <TextBox x:Name="txtOrderAmount" Grid.Column="2" Grid.Row="1" IsReadOnly="True"
                                 Style="{DynamicResource NumericAndReadOnlyNoBackTextBox}"/>
                    </Grid>
                </Grid>
                <GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndNext" />
                <Grid Grid.Column="2" Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="19.5*" />
                        <RowDefinition Height="5*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0" Margin="1">
                        <Grid x:Name="grdInput" IsHitTestVisible="False">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="85*" />
                                <ColumnDefinition Width="105*" />
                                <ColumnDefinition Width="20*" />
                                <ColumnDefinition Width="85*" />
                                <ColumnDefinition Width="105*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Label x:Name="lblMsg" Grid.Row="0" Grid.Column="0" Background="Yellow" Foreground="Red"
                                       VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Visibility="Hidden">
                                    <TextBlock x:Name="tbkMsg" Text="자료 입력 중"  />
                                </Label>
                            </Grid>

                            <Label Grid.Row="1" Grid.Column="0" 
                                    Style="{DynamicResource LabelInputArea}">
                                <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                    <TextBlock Text="관리 번호" Style="{DynamicResource TextBlockInViewBoxInput}" />
                                </Viewbox>
                                
                            </Label>
                            <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75*" />
                                    <ColumnDefinition Width="40*" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtOrderID" Grid.Row="1" Grid.Column="0" Style="{DynamicResource TextBoxInputAutoCreate}" 
                                         IsReadOnly="True" Text="{Binding OrderID}"
                                         />
                                <ComboBox x:Name="cboOrderNO" Padding="0" Background="White" Grid.Column="1"
                                          SelectedValue="{Binding OrderFlag}" KeyDown="CboOrderNO_KeyDown" DropDownClosed="CboOrderNO_DropDownClosed"
                                          Style="{StaticResource ComboBoxInputString}"/>
                            </Grid>

                            <Label Grid.Row="3" Grid.Column="0"  Style="{DynamicResource LabelInputArea}">
                                <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">

                                    <TextBlock Text="OrderNo" Style="{DynamicResource TextBlockInViewBoxInput}"  />
                                </Viewbox>
                            </Label>
                            <TextBox x:Name="TextBoxOrderNo" Grid.Column="1" Grid.Row="3" Text="{Binding OrderNO}" KeyDown="TextBoxOrderNo_KeyDown" IsReadOnly="True" 
                                     Style="{DynamicResource TextBoxInputAutoCreate}"/>

                            <!--<Label Grid.Row="2" Grid.Column="0" Visibility="Hidden"
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Text="Order No." Margin="-2"/>
                            </Label>-->
                            <!--<Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75*" />
