                        <DataGridTextColumn Header="등록일자" Binding="{Binding CreateDate}" Width="auto" />
                        <DataGridTextColumn Header="Tool명 / 설비명" Binding="{Binding MCPartName}" Width="auto" />
                        <DataGridTextColumn Header="관리번호" Binding="{Binding ManageNo}" Width="auto" />
                        <DataGridTextColumn Header="한계수명" Binding="{Binding SetProdQty}" Width="auto" />
                        <DataGridTextColumn Header="비고" Binding="{Binding Spec}" Width="auto" />
                        <DataGridTextColumn Header="부품용도" Binding="{Binding ForUseName}" Width="auto"/>
                        


                        <!--<DataGridTextColumn Header="코드" Binding="{Binding MCPartID}" />
                        <DataGridTextColumn Header="부품명" Binding="{Binding MCPartName}" />
                        <DataGridTextColumn Header="세부내역" Binding="{Binding Spec}" />
                        <DataGridTextColumn Header="중량" Binding="{Binding Weight}" CellStyle="{StaticResource NumericDataGridCell}"
                                            Visibility="Hidden"/>
                        <DataGridTextColumn Header="이미지이름" Binding="{Binding ImageName}"/>
                        <DataGridTextColumn Header="단위" Binding="{Binding UnitClssName}" />
                        <DataGridTextColumn Header="적정재고량" Binding="{Binding NeedStockQty}" CellStyle="{StaticResource NumericDataGridCell}"/>
                        <DataGridTextColumn Header="사용여부" Binding="{Binding UseClssChar}" />
                        <DataGridTextColumn Header="용도구분" Binding="{Binding ForUseName}" />
                        <DataGridTextColumn Header="용도구분ID" Binding="{Binding ForUse}" Visibility="Hidden"/>-->
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="chkAllCheck" Grid.Column="0" VerticalAlignment="Center" VerticalContentAlignment="Center"
                              Padding="0" Checked="CheckAll_Click" Unchecked="UnCheckAll_Click">
                        <TextBlock Text="전체선택" Margin="-2"/>
                    </CheckBox>
                    <TextBlock x:Name="tbkCount" Grid.Column="1" Text="▶ 검색결과 : " VerticalAlignment="Center" Margin="-2"/>
                </Grid>
            </Grid>

            <GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndNext"/>
           
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.6*" />
                        <RowDefinition Height="0.8*" />
                        <RowDefinition Height="0.9*" />
                    </Grid.RowDefinitions>
                    <Grid x:Name="gridInput1"  Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="lblMsg" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                           Background="Yellow" Foreground="Red" Visibility="Hidden">
                                <TextBlock x:Name="tbkMsg" Margin="-2" Text="자료 입력 중" />
                            </Label>
                        <Label Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center">
                            <TextBlock Text="코    드" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtMcPartCode" Grid.Column="1" Grid.Row="1" Padding="0" IsReadOnly="True"
                            Text="{Binding MCPartID}" Style="{StaticResource readOnlyTextBox}"/>
                        <Label Grid.Column="0" Grid.Row="2" HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center">
                            <TextBlock Text="품    명" Margin="-2"/>
                        </Label>
                            <TextBox x:Name="txtMcPartName" Grid.Column="1" Grid.Row="2" Padding="0" 
                             Text="{Binding MCPartName}"/>
                        <Label Grid.Column="0" Grid.Row="3" HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center">
                            <TextBlock Text="비    고" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtSpec" Grid.Column="1" Grid.Row="3" Grid.RowSpan="3"
                             Padding="0" Text="{Binding Spec}" AcceptsReturn="True" TextWrapping="Wrap"
                             ScrollViewer.VerticalScrollBarVisibility="Visible"/>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center">
                            <TextBlock Text="부품용도" Margin="-2"/>
                        </Label>
                        <ComboBox x:Name="cboForUse" Grid.Column="1" Grid.Row="1" Padding="0" Background="White"
                              SelectedValue="{Binding ForUse}"/>
                        <Label Grid.Column="0" Grid.Row="2" HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center">
                            <TextBlock Text="단      위" Margin="-2"/>
                        </Label>
                            <ComboBox x:Name="cboUnitClss" Grid.Column="1" Grid.Row="2" Padding="0" Background="White"
                              SelectedValue="{Binding UnitClss}"/>
                        <Label Grid.Column="0" Grid.Row="3" HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center" >
                            <TextBlock Text="적정재고량" Margin="-2"/>
                        </Label>
                            <TextBox x:Name="txtNeedStockQty" Grid.Column="1" Grid.Row="3" Padding="0" 
                             Text="{Binding NeedStockQty}" Style="{StaticResource InputCommaZeroTextBoxNoRight}"/>
                        <Label Grid.Column="0" Grid.Row="5" HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center" Visibility="Hidden">
                            <TextBlock Text="단위당무게(kg)" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtWeight" Grid.Column="1" Grid.Row="5" Padding="0" 
                             Text="{Binding Weight}" Style="{StaticResource InputCommaZeroTextBoxNoRight}" Visibility="Hidden"/>
                        <Label Grid.Column="0" Grid.Row="4" HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center" Visibility="Visible">
                            <TextBlock Text="한계수명" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtSetProdQtyt" Grid.Column="1" Grid.Row="4" Padding="0" 
                             Text="{Binding SetProdQty}" Style="{StaticResource InputCommaZeroTextBoxNoRight}" Visibility="Visible"/>
                        <Label Grid.Column="0" Grid.Row="5" HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center" Visibility="Visible">
                            <TextBlock Text="관리번호" Margin="-2"/>
                        </Label>
                        <TextBox x:Name="txtManageNo" Grid.Column="1" Grid.Row="5" Padding="0" 
                             Text="{Binding ManageNo}" Style="{StaticResource InputCommaZeroTextBoxNoRight}" Visibility="Visible"/>
                    </Grid>
                    </Grid>
                <Grid x:Name="gridInput2" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.3*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Grid.Row="0" Padding="0" Content="이 미 지" 
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                x:Name="btnImgSelect" Click="BtnImgSelect_Click" IsEnabled="False"/>
                        <TextBox x:Name="txtImage" Grid.Row="0" Grid.Column="1" Padding="0" IsEnabled="False"
                                 Text="{Binding ImageName}"/>
                        <Button x:Name="btnImageView" Grid.Column="0" Grid.Row="1" Padding="0" Content="이미지 실행" 
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                Click="BtnImageView_Click"/>
                        <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="2"
                            Background="Gray" BorderBrush="Black" BorderThickness="1">
                            <Viewbox>
                                <Image x:Name="imgPart"/>
                            </Viewbox>
                        </Border>
                    </Grid>


                <Grid x:Name="gridInput3" Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.12*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.15*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.15*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Style="{DynamicResource noViewboxLabel}"
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBlock Text="전체 제품" Margin="-2"/>
                    </Label>
                    <Label Grid.Row="0"  Grid.Column="2" Style="{DynamicResource noViewboxLabel}" 
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBlock Text="선택 제품" Margin="-2"/>
                    </Label>
                    <Label Grid.Row="0" Grid.Column="4" Margin="1" Style="{DynamicResource noViewboxLabel}"
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBlock Text="전체MC" Margin="-2"/>
                    </Label>
                    <Label Grid.Row="0" Grid.Column="6" Style="{DynamicResource noViewboxLabel}"
                                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBlock Text="선택MC" Margin="-2"/>
                    </Label>
                    <DataGrid x:Name="dgdAllProduct" Grid.Row="1" Margin="1" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="" Binding="{Binding Num}" />
                            <DataGridTextColumn Header="제품" Binding="{Binding Article}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Column="1" Grid.Row="1" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button x:Name="btnRight" Grid.Column="1" Grid.Row="2" Style="{DynamicResource btnInNoViewBox}" Margin="1" Click="btnRight_Click">
                            <Image Source="{DynamicResource btiAddRight}" Width="10" Height="10" IsEnabled="False"/>
                        </Button>
                        <Button x:Name="btnLeft" Grid.Column="1" Grid.Row="3" Style="{DynamicResource btnInNoViewBox}" Margin="1" Click="btnLeft_Click">
                            <Image Source="{DynamicResource btiAddLeft}" Width="10" Height="10" IsEnabled="False"/>
                        </Button>
                    </Grid>
                    <DataGrid x:Name="dgdSelProduct" Grid.Row="1" Grid.Column="2" Margin="1" IsReadOnly="True" SelectionChanged="DgdSelProduct_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="" Binding="{Binding Num}" />
                            <DataGridTextColumn Header="제품" Binding="{Binding Article}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid x:Name="dgdAllProcess" Grid.Row="1" Grid.Column="4" Margin="1" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="" Binding="{Binding Num}" />
                            <DataGridTextColumn Header="공정/호기" Binding="{Binding MCNAME}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Column="5" Grid.Row="1" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button x:Name="btnRight2" Grid.Row="2" Style="{DynamicResource btnInNoViewBox}" Margin="1" Click="btnRight2_Click">
                            <Image Source="{DynamicResource btiAddRight}" Width="10" Height="10" IsEnabled="False"/>
                        </Button>
                        <Button x:Name="btnLeft2" Grid.Row="3" Style="{DynamicResource btnInNoViewBox}" Margin="1" Click="btnLeft2_Click">
                            <Image Source="{DynamicResource btiAddLeft}" Width="10" Height="10" IsEnabled="False"/>
                        </Button>
                    </Grid>
                    <DataGrid x:Name="dgdselProcess" Grid.Row="1" Grid.Column="6" Margin="1" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="" Binding="{Binding Num}" />
                            <DataGridTextColumn Header="공정/호기" Binding="{Binding MCNAME}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
